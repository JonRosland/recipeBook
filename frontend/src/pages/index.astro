---
// index.astro
import SearchBar from "../components/SearchBar.svelte";
import SearchResults from "../components/SearchResults.svelte";
import Layout from "../layouts/Layout.astro";
import { getRecipesApi } from "../components/APIFunctions.js";

// Fetch recipes from backend
const recipes = await getRecipesApi().catch((error) => {
    console.error("Failed to fetch recipes:", error);
    return [];
});
---

<Layout title="Cookbook App">
    <div class="container">
        <header>
            <h1 class="page-title">overskrtift</h1>
        </header>

        <SearchBar client:load id="search-bar" />
        <SearchResults client:load id="search-results" recipes={recipes} />

        <a href="/add-recipe" class="add-button" aria-label="Add new recipe"
            >+</a
        >
    </div>
</Layout>

<script>
    // Connect search bar and results components
    document.addEventListener("DOMContentLoaded", () => {
        const searchBar = document.getElementById("search-bar");
        const searchResults = document.getElementById("search-results");

        if (searchBar && searchResults) {
            // Handle search events
            searchBar.addEventListener("search", (event) => {
                const resultsComponent = searchResults.__svelte__;

                if (resultsComponent && resultsComponent.updateResults) {
                    if (event.detail && event.detail.results) {
                        // Update with search results
                        resultsComponent.updateResults(event.detail.results);
                    } else {
                        // Reset to show all recipes
                        resultsComponent.resetResults();
                    }
                }
            });
        }
    });
</script>

<style>
    :root {
        --primary-color: #55a7ac;
        --text-light: #ffffff;
        --text-dark: #000000;
        --card-radius: 24px;
    }

    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 640px;
        margin: 0 auto;
        padding: 20px;
        position: relative;
        min-height: 100vh;
    }

    .page-title {
        color: var(--primary-color);
        font-size: 64px;
        font-weight: 600;
        margin-bottom: 40px;
        text-shadow: 0 4px 4px rgba(0, 0, 0, 0.25);
    }

    .add-button {
        position: fixed;
        bottom: 30px;
        right: 30px;
        width: 128px;
        height: 128px;
        background-color: var(--primary-color);
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #284b63;
        font-size: 128px;
        line-height: 1;
        text-decoration: none;
        box-shadow: 0 4px 4px rgba(0, 0, 0, 0.25);
    }

    @media (max-width: 768px) {
        .page-title {
            font-size: 48px;
        }

        .add-button {
            width: 100px;
            height: 100px;
            font-size: 100px;
        }
    }
</style>
