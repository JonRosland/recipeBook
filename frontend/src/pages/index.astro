---
// index.astro
import Layout from "../layouts/Layout.astro";
import SearchBar from "../components/SearchBar.svelte";
import RecipeGrid from "../components/RecipeGrid.svelte";
import { getRecipesApi } from "../components/APIFunctions.js";

// Fetch recipes from backend
const recipes = await getRecipesApi().catch((error) => {
    console.error("Failed to fetch recipes:", error);
    return [];
});
---

<Layout title="Cookbook App">
    <div class="container">
        <header>
            <h1 class="page-title">Oppskrifter</h1>
        </header>

        <SearchBar client:load />
        <RecipeGrid client:load recipes={recipes} />

        <a href="/recipe/new" class="add-button" aria-label="Add new recipe"
            >+</a
        >
    </div>
</Layout>

<style>
    .container {
        max-width: 640px;
        margin: 0 auto;
        padding: var(--spacing-lg);
        position: relative;
        min-height: 100vh;
    }

    .page-title {
        font-size: 64px;
        font-weight: 600;
        margin-bottom: 40px;
        text-shadow: 0 4px 4px rgba(0, 0, 0, 0.25);
    }

    .add-button {
        position: fixed;
        bottom: var(--spacing-xxl);
        right: var(--spacing-xxl);
        width: 70px;
        height: 70px;
        background-color: var(--primary-color);
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        color: var(--primary-color-dark);
        font-size: 70px;
        line-height: 1;
        text-decoration: none;
        box-shadow: var(--floating-button-shadow);
    }

    @media (max-width: 768px) {
        .page-title {
            font-size: 48px;
        }

        .add-button {
            width: 60px;
            height: 60px;
            font-size: 60px;
        }
    }
</style>
